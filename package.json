{
    "name": "nodecli-template",
    "displayName": "nodecli-template",
    "description": "A template for creating a node cli application",
    "version": "1.0.0",
    "license": "MIT",
    "main": "src/app.js",
    "type": "module",
    "files": [
        "src"
    ],
    "bin": {
        "test-nodecli": "src/app.js"
    },
    "repository": {
        "type": "git",
        "url": ""
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "commit": "git-cz",
        "lint": "eslint . --fix",
        "pretty:fix": "prettier --write .",
        "start": "cross-env NODE_ENV=production node dist/app.js",
        "dev": "nodemon src/app.js",
        "test": "vitest",
        "prepare": "husky",
        "doctoc": "doctoc --title '## Contents ðŸ“–' README.md",
        "contrib:add": "all-contributors add",
        "contrib:generate": "all-contributors generate",
        "contrib:check": "all-contributors check"
    },
    "devDependencies": {
        "@commitlint/cli": "^18.6.0",
        "@commitlint/config-conventional": "^19.0.3",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/config": "^3.3.3",
        "@types/figlet": "^1.5.8",
        "@types/inquirer": "^9.0.7",
        "@types/node": "^20.11.16",
        "@types/nodemon": "^1.19.6",
        "all-contributors-cli": "^6.26.1",
        "commitizen": "^4.3.0",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "doctoc": "^2.2.1",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.0.10",
        "lint-staged": "^15.2.2",
        "nodemon": "^3.0.3",
        "prettier": "^3.2.5",
        "semantic-release": "^23.0.2",
        "vitest": "^1.2.2"
    },
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "config": "^3.3.11",
        "dotenv": "^16.4.1",
        "envalid": "^8.0.0",
        "execa": "^8.0.1",
        "figlet": "^1.7.0",
        "find-up": "^7.0.0",
        "inquirer": "^9.2.15",
        "listr2": "^8.0.2",
        "mergician": "^2.0.0",
        "string-builder": "^0.1.8"
    }
}
